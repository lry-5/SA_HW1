.main_desc{
	left: 211px;
	overflow: auto;
	overflow-x: hidden;
}
#div_f {
	height: 50px;
	padding-left: 6px;
	position: relative;
}
.tools{
	padding-top: 8px;
	padding-left: 12px;
}
.tools span{
	width: 100px;
	height: 32px;
	display: block;
	text-align: center;
	line-height: 32px;
	font-size: 14px;
	color: #fff;
	font-weight: bold;
	cursor: pointer;
	font-family: arial;
	float: left;
	border-radius: 8px;
}
.tools span:hover{
	background-color: #0099FF;
}
.tools .icon{
	display: inline;
	margin-right: 4px;
	vertical-align: middle;
	height: 24px;
	width: 20px;
}
.tools .icon-upload{
	
	background: url(../imgs/sys-icon.png) 0 0 no-repeat;
}

.upload_file span{
	background: #247EE2;
}
.new_folder span{
	background: #fff;
	margin-left: 132px;
	margin-top: -9px;
	border: 1px solid #D2D2D2;
	position: absolute;
	color: #000000;
}
